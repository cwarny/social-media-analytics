<div class="container">
	<div class="row">
		<div class="col-md-3">
			<ul class="nav nav-pills nav-stacked">
				{{#each referrers}}
					{{#if text}}
						<li>{{#linkTo "referrer" this}}{{user.screen_name}}<span class="badge">{{totalClicks}}</span>{{/linkTo}}</li>
					{{/if}}
				{{/each}}
			</ul>
		</div>
		{{outlet referrer}}
	</div>
</div>