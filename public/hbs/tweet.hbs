{{#if model.referrer.isExpanded}}
	<div class="well row tweetbox">
		<div class="col-md-1">
			<img {{bindAttr src=model.referrer.profile_image_url}} alt="Profile picture">
		</div>
		<div class="col-md-11">
			<blockquote>
				<p>{{model.text}}</p>
				<small>{{model.referrer.name}} (@{{model.referrer.screen_name}})</small>
			</blockquote>
		</div>
		{{bar-chart data=model.clicks startDate=controllers.profile.startDate endDate=controllers.profile.endDate transition="transition"}}
		</br>
	</div>
{{else}}
	{{#if model.referrer.onlyOneTweet}}
		<div class="well row tweetbox">
			<div class="col-md-1">
				<img {{bindAttr src=model.referrer.profile_image_url}} alt="Profile picture">
			</div>
			<div class="col-md-11">
				<blockquote>
					<p>{{model.text}}</p>
					<small>{{model.referrer.name}} (@{{model.referrer.screen_name}})</small>
				</blockquote>
			</div>
			{{bar-chart data=model.clicks startDate=controllers.profile.startDate endDate=controllers.profile.endDate transition="transition"}}
			</br>
		</div>
	{{/if}}
{{/if}}