<span {{bindAttr class=":toggle-icon children.length::leaf"}} {{action toggle}}>
	{{#if children}}
		{{#if isExpanded}}
			&#x25BC;
		{{else}}
			&#x25B6;
		{{/if}}
	{{/if}}
</span>
<a {{action click}} class="text">{{user.screen_name}}</a>
{{#if isExpanded}}
	{{control "treeBranch" content}}
{{/if}}