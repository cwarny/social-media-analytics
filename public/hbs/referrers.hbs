<div class="container">
	<div class="row">
		<div class="col-md-2 col-md-offset-5">
			<h2>Referrers</h2>
		</div>
	</div>
	</br>
	<div class="row">
		<div class="col-md-2">
			<ul class="nav nav-pills nav-stacked">
				{{#each model}}
					{{#linkTo "referrer" this tagName="li" href=false}} 
						<a {{bindAttr href="view.href"}}> 
							{{tweet.user.screen_name}}
							<span class="badge pull-right">{{totalVisits}}</span> 
						</a>
					{{/linkTo}}
				{{/each}}
			</ul>
		</div>
		<div>
			{{outlet referrer}}
		</div>
	</div>
</div>