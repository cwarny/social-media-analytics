<div class="col-md-9 col-md-offset-1">
	<div class="well row">
		<div class="col-md-1">
			<img {{bindAttr src=user.profile_image_url}} alt="Profile picture">
		</div>
		<div class="col-md-11">
			<blockquote>
				<p>{{text}}</p>
				<small>{{user.name}} (@{{user.screen_name}})</small>
			</blockquote>
		</div>
	</div>
	{{view App.BarGraph isLoadedBinding="model.isLoaded" dataBinding=visits}}
</div>